@import "./common"
$boderColor= #afb5c5;
$focus-line= #b34049;
$errorsColor= #a54b4e;

input()
  outline none;border none; background none;

$box-shadow()
  box-shadow 0px 1px 3px 0px #d9d9d9;
  html.ie8 &,
  html.ie7 &,
  html.ie6 &
    border 2px solid #bfbfbf;

$field-input()
  $box-shadow();$pad(l 25px no,r 25px no)

$validateBox()
  $WH(h 16px,'');color #999;line-height 10px;font-size 16px;

$transform()
   transform scaleX(0); transition transform .65s cubic-bezier(0.23, 1, 0.32, 1);

fz(prop)
  if prop[1]
    font-size prop[0];/*no*/
  else
    font-size prop[0]

